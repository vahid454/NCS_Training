@model _23FebMVC.Models.EmployeeModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddEmployee</title>
    <style>
        .required {
        color: red;
        }
    </style>

</head>

<body align="center" style="font-size:large; background-color:ghostwhite">
    @using (Html.BeginForm()) 
    {

        
    <div class="form-horizontal">
        <h4>Employee Model</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "required" })
